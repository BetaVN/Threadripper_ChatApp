<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLoading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Loading ..."/>

    <TextView
        android:id="@+id/tvNoAny"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="You don't have any conversation. Please search users and add friends for chatting and group chats"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/tv_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_trash"
        android:drawablePadding="@dimen/space15"
        android:gravity="center_vertical"
        android:padding="@dimen/space10"
        android:text="Delete (3)"
        android:textAppearance="@style/ExtraLight"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/h3"
        android:visibility="gone" />
</RelativeLayout>
