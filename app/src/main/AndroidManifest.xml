<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chatapp.threadripper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:theme="@style/AppThemeFull">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authenticated.SetupPhoneNumber"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".authenticated.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.Trans" />
        <activity
            android:name=".authenticated.Conversation"
            android:theme="@style/AppTheme.Trans" />
        <activity
            android:name=".authentication.LoginActivity"
            android:theme="@style/AppThemeFull"></activity>
        <activity
            android:name=".authentication.SignUpActivity"
            android:theme="@style/AppThemeFull"></activity>
        <activity
            android:name=".authentication.ForgotPasswordActivity"
            android:theme="@style/AppThemeFull"></activity>
    </application>

</manifest>